{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug SiteSurveyor (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/SiteSurveyor",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Qt pretty printers",
                    "text": "python import sys; sys.path.insert(0, '/usr/share/qtcreator/debugger/')",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: Build Debug"
        },
        {
            "name": "Debug SiteSurveyor (LLDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/SiteSurveyor",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "Attach to Process",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/build/bin/SiteSurveyor",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb"
        }
    ]
}
